<% content_for :title, "Comments" %>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", [:users, comment] %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_users_comment_path %>
