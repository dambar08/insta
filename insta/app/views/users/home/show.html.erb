  </a>
  <a href="<%= asset_path('chevron-down.svg') %>">
    <img src="<%= asset_path('chevron-down.svg') %>" alt="" />
  </a>

  <a href="<%= asset_path('chevron-left.svg') %>">
    <img src="<%= asset_path('chevron-left.svg') %>" alt="" />
  </a>
  <a href="<%= asset_path('chevron-right.svg') %>">
    <img src="<%= asset_path('chevron-right.svg') %>" alt="" />
  </a>
